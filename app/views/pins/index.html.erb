<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(pin.image.url(:medium), :alt =>  pin.description), pin %>
      <div class="panel-body">
        <%= pin.description %><br/>
		From: <%= pin.listing_id %><br/>
	        <% if pin.pilot == current_pilot %>
	          	<div class="actions"> 
	              <%= link_to pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
	             <span class="fa fa-trash-o"></span> Delete
	        <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<%= will_paginate @pins %>
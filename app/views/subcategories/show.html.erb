<% title @subcategory.name + ', ' + @category.name + ' Pilot Car Directory' %>
<% description 'Pilot car companies, operators and oversized load escorts near ' +@subcategory.name + ', ' + @category.name  %>
<% keywords @subcategory.name + ', pilot car directory, pilotcars, oversize load escorts' %>
<%= render 'layouts/search' %>
<div class="container">
	<div class="well well-sm">
	<h5><%= link_to 'USA', states_path %> > <%= link_to @category.name, @category %>  > <%= @subcategory.name %> Metro Area</h5>
		<h3><%= @subcategory.name %> Pilot Car Directory</h3>
<div class="container">
		  <div class="row">
				  <div class="col-xs-12 col-sm-7 col-md-7">
					  <% if @listings.present? %>	
					  <%  @listings.each do |listing| %>
						<h4><%= link_to listing.title, listing_path(listing.slug) %></h4>
						<b><%= listing.city %>, <%= listing.state %> &nbsp; &nbsp;  
					    <%= link_to number_to_phone(listing.contactphone, area_code: true), 			  				phone_number_link(listing.contactphone) %> </b>
						<p><%= raw(listing.shortdescription) %><br>
					<% end %>
					<% else %>
					<p>No listings found! </p>
					<% end %>
				   </div>
			   <div class="col-xs-6 col-sm-5 col-md-5">
				   <p align="right"> </p>
			   </div>
		   </div>
		<div class="container", align="center">
			<%= will_paginate @listings %>
		</div>
</div>
</div>
</div>
<% title @category.name + ' Pilot Car Directory'  %>
<% description @category.name + ' pilot car companies and oversized load escorts. Most complete pilot car directory in ' + @category.name %>
<% keywords @category.name + ', pilotcars, oversize load escorts' %>
<%= render 'layouts/search' %>
<div class='container'>
	<div class="well well-sm">
		<h5><%= link_to 'USA', states_path %> > <%= @category.name %>  > Metro Area List</h5>
	<h3><%= @category.name %> Pilot Car Directory</h3>
	<div class="container-fluid">
		<div class="row"><p><big>
			  <%  @subcategories.each do |subcategory| %>
			    <div class="col-md-2 col-sm-3 col-xs-5"><%= link_to subcategory.name, category_subcategory_path(@category, subcategory)  %></div>
				<% end %>
			</div></big></p>
			</div>
<hr>
<div class="container">
		  <div class="row">
				  <div class="col-xs-12 col-sm-7 col-md-7">
					  <% if @listings.present? %>	
					  <%  @listings.each do |listing| %>
						<h4><%= link_to listing.title, listing_path(listing.slug) %></h4>
						<b><%= listing.city %>, <%= listing.state %> &nbsp; &nbsp;  
					    <%= link_to number_to_phone(listing.contactphone, area_code: true), 			  				phone_number_link(listing.contactphone) %> </b>
						<p><%= raw(listing.shortdescription) %><br>
					<% end %>
					<% else %>
					<p>No listings found! </p>
					<% end %>
				   </div>
			   <div class="col-xs-6 col-sm-5 col-md-5">
				   <p align="right"> </p>
			   </div>
		   </div>
		<div class="container", align="center">
			<%= will_paginate @listings %>
		</div>
	</div>
</div>
</div>
</div>
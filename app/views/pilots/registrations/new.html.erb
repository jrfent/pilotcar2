<div class="container">
	<div class="panel panel-default">
  <div class="panel-heading">
    <h3>Pilot Car Company Sign up</h3>
  </div>

  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
	
  <div class="form-group">
   <%= f.label "Contact Name" %>
   <%= f.text_field :contact_name, autofocus: true, class: "form-control" %>
  </div>
  
  <div class="form-group">
   <%= f.label :email %>
   <%= f.email_field :email, class: "form-control" %>
  </div>
  
  <div class="form-group">
   <%= f.label "Company Name" %>
   <%= f.text_field :company, class: "form-control" %>
  </div>	
  
  <div class="form-group">
   <%= f.label "Mailing Address" %>
   <%= f.text_field :address_line1, class: "form-control" %>
  </div>
  
  <div class="form-group">
   <%= f.label "Mailing Address (Line 2)" %>
   <%= f.text_field :address_line2, class: "form-control" %>
  </div>
  
  <div class="form-group">
   <%= f.label :city %>
   <%= f.text_field :city, class: "form-control" %>
  </div>
  
  <div class="form-group">
   <%= f.label :state %>
   <%= f.text_field :state, class: "form-control" %>
  </div>
  
  <div class="form-group">
   <%= f.label "Zip Code" %>
   <%= f.text_field :zipcode, class: "form-control" %>
  </div>
  
  <div class="form-group">
   <%= f.label "Phone Number" %>
   <%= f.text_field :contact_phone, class: "form-control" %>
  </div>

  <div class="form-group">
	<%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
	<%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
  </div>

  <div class="form-group">
     <%= f.submit "Sign up to see listings", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

  <div class="container">
    <div class="well well-sm">
      <h3>Create a Pilot Car Listing</h3>
	  <h4>for the Directory</h4>
    </div>
  </div>
</div>
<div class="container">
<div class="well well-sm">
 <%= form_for @listing do |f| %>
 
 <div class="form-group">
   <label for="Title">Title</label><br>
   <%= f.text_field :title, class: "form-control", placeholder: 'Company Name', required: true %>
 </div>
 
 <div class="form-group">
   <label for="Full Description">Full Description</label><br>
   <%= f.text_area :description, class: 'ckeditor', placeholder: 'Long Description', required: true %>
 </div>
 
 <div class="form-group">
   <label for="Short Description">Short Description (140 characters)</label><br>
   <%= f.text_area :shortdescription, class: "form-control", maxlength: "140", placeholder: '(for search results)', required: true %>
 </div>
 
 <div class="form-group">
   <label for="City">City</label><br>
   <%= f.text_field :city, class: "form-control", placeholder: 'City', required: true %>
 </div>
 
 <div class="form-group">
   <label for="State">State</label><br>
   <%= f.text_field :state, class: "form-control", placeholder: 'State', required: true %>
 </div>
 
 <div class="form-group">
   <label for="Zipcode">Zipcode</label><br>
   <%= f.text_field :zipcode, class: "form-control", placeholder: 'Zipcode', maxlength: "5", required: true %>
 </div>
 
 <div class="form-group">
   <label for="Contact Phone">Contact Phone</label><br>
   <%= f.text_field :contactphone, class: "form-control", placeholder: 'format:7775551234',  maxlength: "14", required: true %>
 </div>
 <div class="form-group">
   <label for="CellPhone">Mobile Phone</label><br>
   <%= f.text_field :cellphone, class: "form-control", placeholder: 'format:7775551234',  maxlength: "14", required: false %>
 </div>
 
 <div class="form-group">
   <label for="Fax">Fax</label><br>
   <%= f.text_field :fax, class: "form-control", placeholder: 'format:7775551234',  maxlength: "14", required: false %>
 </div>
 
 <div class="form-group">
   <label for="Contact Email">Contact Email</label><br>
   <%= f.text_field :contactemail, class: "form-control", placeholder: '(email to send leads to)', required: true %>
 </div>

 <div class="form-group">
   <label for="State for Listing">State for Listing</label>
   <%= f.select :category_id, Category.all.map { |f| [f.name, f.id]}%>
   (choose the State that you want to have most related to your listing)
 </div>
 
 <div class="form-group">
   <label for="Metro area for Listing">Metro area for Listing</label>
   <%= f.select :subcategory_id, options_for_select([])%>
  (choose the Metro Area that you want to have most related to your listing)
 </div>
 
 <h3>Social Media</h3>
 <div class="form-group">
   <label for="Website">Website URL</label>
   <%= f.text_field :website, class: "form-control", placeholder: 'http://yourweb.com' %>
 </div>
 <div class="form-group">
   <label for="Blog">Blog URL</label><br>
   <%= f.text_field :blog, class: "form-control", placeholder: 'http://yourblog.com' %>
 </div>
 <div class="form-group">
   <label for="Twitter">Twitter Name</label><br>
   <%= f.text_field :twitter, class: "form-control", placeholder: '@twittername' %>
 </div>
 <div class="form-group">
   <label for="Facebook">Facebook URL</label><br>
   <%= f.text_field :facebook, class: "form-control", placeholder: 'http://facebook.com/yourfbpage' %>
 </div>
 <div class="form-group">
   <label for="Instagram">Instagram URL</label><br>
   <%= f.text_field :instagram, class: "form-control", placeholder: 'http://instagram.com/page' %>
 </div>
 <div class="form-group">
   <label for="Pinterest">Pinterest URL</label><br>
   <%= f.text_field :pinterest, class: "form-control", placeholder: 'http://pinterest.com/page' %>
 </div>
 <div class="form-group">
   <label for="Google">Google+ URL</label><br>
   <%= f.text_field :google, class: "form-control", placeholder: 'http://plus.google.com/+yoururl' %>
 </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>
</div>
</div>

<h1>Listing bids</h1>

<table>
  <thead>
    <tr>
      <th>Fee</th>
      <th>Pilot</th>
      <th>Load</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.fee %></td>
        <td><%= bid.pilot_id %></td>
        <td><%= bid.load_id %></td>
        <td><%= link_to 'Show', bid %></td>
        <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
        <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

